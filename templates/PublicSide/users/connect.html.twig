{% extends 'Layout/header.html.twig' %}

{% block title %}Connect{% endblock %}

{% block main %}
    <main class="container mt-5 mb-5">
        <section class="mx-auto col-md-5">
            <h1 class="text-center mb-5">Connexion</h1>

            <form class="container mt-5 write-white" action="{{ pathPost() }}" method="post">

                <div class="row d-flex justify-content-center form-group">
                    <input required name="username" type="username" class="form-control col-md-3" placeholder="Adresse mail">
                </div>
                <div class="row d-flex justify-content-center form-group">
                    <input required name="password" type="password" class="form-control col-md-3">
                </div>
                <div class="row d-flex justify-content-center mt-5 mb-5">
                    <button type="submit" class="btn-arrow" >Connexion</button>
                </div>

            </form>
        </section>
    </main>
{% endblock %}
